/* pages/recommendSong/recommendSong.wxss */
.recommendSongcontainer .recommendHeader {
  position: relative;
}

.recommendSongcontainer .recommendHeader image {
  width: 100%;
  height: 400rpx;
}

.recommendSongcontainer .recommendHeader .datetime {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  padding: 15rpx 50rpx;
  border-radius: 10rpx;
  border: 5rpx solid #fff;
  font-size: 50rpx;
  font-weight: 600;
  color: #fff;
}

.recommendSongcontainer .recommendList {
  position: relative;
  z-index: 1;
  top: -40rpx;
}

.recommendSongcontainer .recommendList .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 80rpx;
  background-color: #fff;
  padding: 20rpx 15rpx;
  font-size: 30rpx;
  color: rgb(83, 83, 83);
}

.recommendList .Listview {
  padding: 0 25rpx;
}
.recommendList .Listview .scrollview{
  height: calc(100vh - 490rpx);
}
.recommendList .listitem {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
}

.recommendList .listitem .cover image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
.recommendList .listitem .song{
  flex-grow: 1;
  padding: 20rpx;
}
.recommendList .listitem .song .songname,
.recommendList .listitem .song .arname {
  overflow: hidden;
  max-width: 500rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-bottom: 10rpx;
}

.recommendList .listitem .song .songname {
  font-size: 28rpx;
  color: #414141;
}

.recommendList .listitem .song .arname {
  font-size: 22rpx;
  color: #797979;
}